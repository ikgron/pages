include /partials/variables.pug
doctype html
html(lang=`en`)
head
  title Alphabetizer
  include /partials/head.pug
  include /partials/styles.pug

  style.
      .placeholder1::placeholder {
        color: #999;
      }


.bg
.vignette
.content
  include /partials/navbar.pug  
            
  h1.text-light(style=`margin-top: 8vh; font-size: ${xlfont}; text-align: center;`) Alphabetizer

  .row(style="margin-left: 1vh; margin-right: 1vh;")
    .col-md-7.mx-auto
      h1.text-light(style=`margin-top: 1vh; font-size: ${lfont};`) Input
      textarea.form-control.placeholder1(id=`input`, placeholder=`Separate by semicolons (;) or new lines`, style=`background-color: black; color: white; height: 25vh; border: 1px solid white; resize: none`, oninput=`sort()`)
 

  div(style=`text-align: center`)
    button.btn.btn-animate.btn-clickable(type=`button` class=`btn` style=`font-size: ${lfont}; margin-top: 2vh;` onclick=`clearInput()`) Clear


  .row(style= "margin-left: 1vh; margin-right: 1vh;")
    .col-md-7.mx-auto
      h1.text-light(style=`margin-top: 0vh; font-size: ${lfont};`) Output
      textarea.form-control.placeholder1(id=`output`, placeholder=`Click to copy`, style=`background-color: black; color: white; height: 25vh; border: 1px solid white; resize: none; cursor: default`, readonly)




  div(style=`border-bottom: 2px solid ${color}; margin-top: 15vh;`)

script(src='/pug/tools/alphabetizer/scripts.js')

include /partials/scripts.pug
