include /partials/variables.pug
doctype html
html(lang=`en`)
head
  title List Sorter | ikgron
  include /partials/head.pug
  include /partials/styles.pug

.bg
.vignette
.content
  include /partials/navbar.pug  
            
  h1.text-light(style=`margin-top: 15vh; font-size: ${lfont}; text-align: center;`) List Sorter

  div(style=`text-align: center; color: white;`)
    label(for=`sortMethod` style=`color: white; font-size: ${sfont};`)
    select#sortMethod(onchange=`sort()`, class=`form-select-sm`, style=`background-color: black; color: ${color}; height: 4vh; font-size: ${sfont}; margin: 1vh;`)
      option(value=`alphabetical` ) Alphabetical
      option(value=`length`) Length

    button.btn.btn-animate.btn-clickable(id=`reverseButton` type=`button` class=`bttn` style=`font-size: ${sfont}; text-align: center; line-height: 1vh; height: 4vh; margin: 1vh;` onclick=`toggleReverse()` onchange=`sort()`) Reverse Output

    


  .row(style="margin-left: 1vh; margin-right: 1vh;")
    .col-md-7.mx-auto
      h1.text-light(style=`margin-top: 0vh; font-size: ${sfont};`) Input
      div(id=`inputContainer`)
      textarea.form-control.placeholder1(id=`input`, placeholder=`Separate by semicolons (;) or new lines`, style=`background-color: black; color: white; height: 25vh; border: 1px solid white; resize: none`, oninput=`sort()`)


  div(style=`text-align: center`)
    button.btn.btn-animate.btn-clickable(id=`clearButton` type=`button` class=`bttn` style=`font-size: ${sfont}; margin-top: 1vh;` onclick=`clearInput()`) Clear


  .row(style= "margin-left: 1vh; margin-right: 1vh;")
    .col-md-7.mx-auto
      h1.text-light(style=`margin-top: 0vh; font-size: ${sfont};`) Output
      div(id=`outputContainer`)
      textarea.form-control.placeholder1(id=`output`, placeholder=`Output appears here`, style=`background-color: black; color: white; height: 25vh; border: 1px solid white; resize: none; cursor: default`, readonly)

  div(style=`text-align: center`)
    button.btn.btn-animate.btn-clickable(id="copyButton" type=`button` class=`bttn` style=`font-size: ${sfont}; margin-top: 1vh; margin-left: 1vw; margin-right: 1vh; margin-bottom: 0vh;` onclick=`copyOutput()`) Copy

    



script(src=`/pug/tools/list-sorter/scripts.js`)

include /partials/scripts.pug
