include /partials/variables.pug
doctype html
html(lang='en')
  head
    title List Sorter | ikgron
    include /partials/head.pug
    include /partials/styles.pug

body
  include /partials/navbar.pug  
      
  h1(style=`text-align: center;`) List Sorter

  div(style='text-align: center;')
    label(for='sortMethod')
    select#sortMethod(onchange='sort()', class='form-select-sm')
      option(value='alphabetical') Alphabetical
      option(value='length') Length

    button.btn.btn-animate.btn-clickable(id='reverseButton', type='button', class='bttn', onclick='toggleReverse()') Reverse Output

  .row
    .col-md-7.mx-auto
      h2 Input
      div(id='inputContainer')
      textarea#input.form-control.placeholder1(placeholder='Separate by commas, semicolons, or new lines.', oninput='sort()')

  div(style='text-align: center;')
    button.btn.btn-animate.btn-clickable(id='clearButton', type='button', class='bttn', onclick='clearInput()') Clear

  .row
    .col-md-7.mx-auto
      h2 Output
      div(id='outputContainer')
      textarea#output.form-control.placeholder1(placeholder='Output appears here.', readonly)

  div(style='text-align: center;')
    button.btn.btn-animate.btn-clickable(id='copyButton', type='button', class='bttn', onclick='copyOutput()') Copy

script(src='/pug/tools/list-sorter/scripts.js')
include /partials/scripts.pug